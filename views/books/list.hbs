<ul>
  {{#each books}}
<div class="templatemo_product_box">
          <h1>{{title}}<br> <span>({{author}})</span></h1>
   	      <a href="/books/{{_id}}"><img src="{{cover}}" style="width:100px; height:150px"></a>
          <div class="product_info">
                <h3>{{basePrice}} vnđ</h3>
            <button style="cursor: pointer; background-color:red"><a href="#">Thêm vào giỏ hàng</a></button>
            <div class="detail_button"><a href="/books/{{_id}}">Chi tiết</a></div>
          </div>
</div>
            
    <div class="cleaner_with_width">&nbsp;</div>
  {{/each}}
</ul>          


<main>
    {{#if hasPrevPage}}
        {{#if _status}}
        <a href="/books?page=1{{link}}"><h1> << </h1></a>
        <a href="/books?page={{prevPage}}{{link}}"><h1> {{prevPage}} </h1></a>
        {{else}}
        <a href="/books?page=1{{link}}"><h1> << </h1></a>
        <a href="/books?page={{prevPage}}{{link}}"><h1> {{prevPage}} </h1></a>
        {{/if}}
    {{/if}}
    {{#if hasPage}}<h1 style="color: blue;">{{pageNumber}}</h1>{{/if}}
    {{#if hasNextPage}}
        {{#if _status}}
        <a href="/books?page={{nextPage}}{{link}}"><h1> {{nextPage}} </h1></a>
        <a href="/books?page={{lastPage}}{{link}}"><h1> >> </h1></a>
        {{else}}
        <a href="/books?page={{nextPage}}{{link}}"><h1> {{nextPage}} </h1></a>
        <a href="/books?page={{lastPage}}{{link}}"><h1> >> </h1></a>
        {{/if}}
    {{/if}}
    
</main>